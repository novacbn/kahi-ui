{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "module": "ES2020",
        "target": "ES2021",
        "strict": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declarationDir": "types"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/*"]
}
