{
    "name": "kahi-ui-framework",
    "author": "novacbn",
    "version": "0.1.0",
    "scripts": {
        "build": "npm run build:framework;npm run build:themes",
        "build:framework": "sass ./src/framework.scss ../../dist/kahi-ui.framework.css",
        "build:themes": "node ./scripts/build-themes.mjs build './src/themes/*.theme.mjs' './src/framework/**/*.theme.mjs' ../../dist/themes/",
        "prepublish": "npm run prepublish:process && npm run prepublish:minify",
        "prepublish:process": "postcss --config postcss.config.js --replace ../../dist/kahi-ui.framework.css",
        "prepublish:minify": "sass --style compressed ../../dist/kahi-ui.framework.css:../../dist/kahi-ui.framework.min.css",
        "prebuild:clean": "rimraf ../../dist"
    },
    "devDependencies": {
        "autoprefixer": "^10.2.5",
        "fast-glob": "^3.2.5",
        "flat": "^5.0.2",
        "postcss-cli": "^8.3.1",
        "postcss-replace": "^1.1.3",
        "prettier": "^2.1.2",
        "rimraf": "^3.0.2",
        "sass": "^1.32.8"
    }
}
