{
    "name": "@kahi-ui/framework",
    "description": "Straight-forward Svelte UI for the Web",
    "author": "novacbn",
    "version": "0.2.14",
    "type": "module",
    "main": "./src/index.ts",
    "svelte": "./src/index.ts",
    "exports": {
        "./package.json": "./package.json",
        ".": "./src/index.ts",
        "./dist/kahi-ui.framework.css": "./dist/kahi-ui.framework.css",
        "./dist/kahi-ui.framework.min.css": "./dist/kahi-ui.framework.min.css"
    },
    "keywords": [
        "css",
        "css-framework",
        "html",
        "kahi-ui",
        "svelte",
        "svelte-components",
        "windicss"
    ],
    "files": [
        "dist",
        "src",
        "CHANGELOG.md",
        "LICENSE",
        "README.md"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/novacbn/kahi-ui"
    },
    "devDependencies": {
        "@storybook/addon-actions": "^6.3.2",
        "@storybook/addon-essentials": "^6.3.2",
        "@storybook/addon-svelte-csf": "^1.1.0",
        "@storybook/core-common": "^6.3.2",
        "@storybook/svelte": "^6.3.2",
        "@sveltejs/vite-plugin-svelte": "^1.0.0-next.11",
        "@tsconfig/svelte": "^1.0.13",
        "cross-env": "^7.0.3",
        "esbuild": "^0.12.11",
        "postcss": "^8.2.15",
        "postcss-cli": "^8.3.1",
        "postcss-import": "^14.0.2",
        "postcss-nesting": "^8.0.1",
        "postcss-replace": "^1.1.3",
        "postcss-windicss": "^0.1.0",
        "prettier": "^2.3.0",
        "prettier-plugin-svelte": "^2.3.1",
        "storybook-builder-vite": "^0.0.10",
        "svelte-check": "^1.6.0",
        "svelte-preprocess": "^4.7.3",
        "svelte2tsx": "^0.4.1",
        "tslib": "^2.2.0",
        "typescript": "^4.3.5",
        "vite": "^2.3.8",
        "windicss": "^3.0.9"
    },
    "scripts": {
        "build": "npm run test && npm run build:lib && npm run build:framework",
        "build:lib": "",
        "build:framework": "cross-env NODE_ENV=production postcss --config postcss.config.cjs --output ./dist/kahi-ui.framework.css ./src/index.css",
        "build:storybook": "build-storybook",
        "dev:storybook": "start-storybook --ci -p 6006",
        "format:docs": "prettier --config ./docs/.prettierrc --write ./docs",
        "format:framework": "prettier --config .prettierrc --write ./src",
        "prepublish:minify": "esbuild --outfile=./dist/kahi-ui.framework.min.css --minify ./dist/kahi-ui.framework.css",
        "test": "npm run test:types && npm run test:svelte",
        "test:svelte": "svelte-check --tsconfig ./tsconfig.json",
        "test:types": "tsc --noEmit",
        "watch:framework": "postcss --config postcss.config.cjs --output ./dist/kahi-ui.framework.css --watch ./src/index.css"
    },
    "dependencies": {
        "svelte": "^3.38.3"
    }
}
