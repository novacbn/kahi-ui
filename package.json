{
    "name": "@kahi-ui/framework",
    "description": "Straight-forward Svelte UI for the Web",
    "author": "novacbn",
    "license": "MIT",
    "version": "0.5.3",
    "type": "module",
    "main": "index.js",
    "types": "index.d.ts",
    "svelte": "index.js",
    "exports": {
        "./package.json": "./package.json",
        ".": "./index.js",
        "./dist/kahi-ui.framework.css": "./dist/kahi-ui.framework.css",
        "./dist/kahi-ui.framework.min.css": "./dist/kahi-ui.framework.min.css"
    },
    "keywords": [
        "component-library",
        "css",
        "css-framework",
        "html",
        "kahi-ui",
        "javascript",
        "svelte",
        "sveltejs",
        "svelte-components",
        "typescript",
        "typescript-definitions",
        "ui-components",
        "ui-library",
        "ui-kit"
    ],
    "files": [
        "actions/*.js",
        "actions/*.d.ts",
        "!actions/*.stories.svelte",
        "!actions/*.stories.svelte.d.ts",
        "components/**/*.js",
        "components/**/*.d.ts",
        "components/**/*.svelte",
        "components/**/*.svelte.d.ts",
        "!components/**/*.stories.svelte",
        "!components/**/*.stories.svelte.d.ts",
        "dist",
        "stores/*.js",
        "stores/*.d.ts",
        "!stores/*.stories.svelte",
        "!stores/*.stories.svelte.d.ts",
        "types/*.js",
        "types/*.d.ts",
        "util/*.js",
        "util/*.d.ts",
        "!util/*.stories.svelte",
        "!util/*.stories.svelte.d.ts",
        "vendor/*.js",
        "CHANGELOG.md",
        "LICENSE",
        "README.md",
        "index.js",
        "index.d.ts"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/novacbn/kahi-ui.git"
    },
    "dependencies": {
        "big-integer": "^1.6.51",
        "svelte": "^3.40.2"
    },
    "devDependencies": {
        "@js-temporal/polyfill": "^0.3.0",
        "@storybook/addon-actions": "^6.4.0",
        "@storybook/addon-essentials": "^6.4.0",
        "@storybook/addon-svelte-csf": "^1.1.0",
        "@storybook/core-common": "^6.4.0",
        "@storybook/svelte": "^6.4.0",
        "@sveltejs/kit": "^1.0.0-next.146",
        "@sveltejs/vite-plugin-svelte": "^1.0.0-next.11",
        "@tsconfig/svelte": "^1.0.13",
        "esbuild": "^0.12.29",
        "esbuild-sass-plugin": "^2.0.3",
        "prettier": "^2.3.0",
        "prettier-plugin-svelte": "^2.3.1",
        "sass": "^1.47.0",
        "storybook-builder-vite": "^0.1.10",
        "svelte-check": "^2.2.7",
        "svelte-preprocess": "^4.9.8",
        "svelte2tsx": "^0.4.11",
        "typescript": "^4.3.5",
        "vite": "^2.3.8",
        "xbytes": "^1.7.0"
    },
    "scripts": {
        "build": "npm run build:lib && npm run build:framework && npm run build:minify && npm run report",
        "build:lib": "svelte-kit package",
        "build:framework": "node ./scripts/build.js",
        "build:minify": "node ./scripts/build.js --minify",
        "build:storybook": "build-storybook",
        "dev:storybook": "start-storybook --ci -p 6006",
        "lint": "npm run lint:format",
        "lint:format": "prettier --config .prettierrc --check ./src",
        "format:source": "prettier --config .prettierrc --write ./src",
        "postversion": "git push && git push --tags && npm run release",
        "release": "npm run test && npm run build && npm run release:publish",
        "release:publish": "npm publish ./package",
        "report": "npm run report:framework",
        "report:framework": "node ./scripts/report.js",
        "test": "npm run test:types && npm run test:svelte",
        "test:svelte": "svelte-check --tsconfig ./tsconfig.json",
        "test:types": "tsc --noEmit",
        "watch:framework": "node ./scripts/build.js --watch"
    }
}
