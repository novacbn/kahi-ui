{
    "name": "@kahi-ui/framework",
    "description": "Straight-forward Svelte UI for the Web",
    "author": "novacbn",
    "license": "MIT",
    "version": "0.4.8",
    "type": "module",
    "main": "index.js",
    "types": "index.d.ts",
    "svelte": "index.js",
    "exports": {
        "./package.json": "./package.json",
        ".": "./index.js",
        "./dist/kahi-ui.framework.css": "./dist/kahi-ui.framework.css",
        "./dist/kahi-ui.framework.min.css": "./dist/kahi-ui.framework.min.css"
    },
    "keywords": [
        "component-library",
        "css",
        "css-framework",
        "html",
        "kahi-ui",
        "javascript",
        "svelte",
        "sveltejs",
        "svelte-components",
        "typescript",
        "typescript-definitions",
        "ui-components",
        "ui-library",
        "ui-kit"
    ],
    "files": [
        "actions/*.js",
        "actions/*.d.ts",
        "components/**/*.js",
        "components/**/*.d.ts",
        "components/**/*.svelte",
        "components/**/*.svelte.d.ts",
        "!components/**/*.stories.svelte",
        "!components/**/*.stories.svelte.d.ts",
        "dist",
        "stores/*.js",
        "stores/*.d.ts",
        "types/*.js",
        "types/*.d.ts",
        "util/*.js",
        "util/*.d.ts",
        "CHANGELOG.md",
        "LICENSE",
        "README.md",
        "index.js",
        "index.d.ts"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/novacbn/kahi-ui.git"
    },
    "devDependencies": {
        "@storybook/addon-actions": "^6.3.12",
        "@storybook/addon-essentials": "^6.3.12",
        "@storybook/addon-svelte-csf": "^1.1.0",
        "@storybook/core-common": "^6.3.12",
        "@storybook/svelte": "^6.3.12",
        "@sveltejs/kit": "^1.0.0-next.146",
        "@sveltejs/vite-plugin-svelte": "^1.0.0-next.11",
        "@tsconfig/svelte": "^1.0.13",
        "cross-env": "^7.0.3",
        "esbuild": "^0.12.11",
        "postcss": "^8.2.15",
        "postcss-cli": "^8.3.1",
        "postcss-import": "^14.0.2",
        "postcss-nesting": "^8.0.1",
        "postcss-replace": "^1.1.3",
        "postcss-windicss": "^0.1.0",
        "prettier": "^2.3.0",
        "prettier-plugin-svelte": "^2.3.1",
        "storybook-builder-vite": "^0.1.2",
        "svelte-check": "^2.2.7",
        "svelte-preprocess": "^4.9.8",
        "svelte2tsx": "^0.4.7",
        "tslib": "^2.2.0",
        "typescript": "^4.3.5",
        "vite": "^2.3.8",
        "windicss": "^3.0.9"
    },
    "scripts": {
        "build": "npm run build:lib && npm run build:framework && npm run build:minify",
        "build:lib": "svelte-kit package",
        "build:framework": "cross-env NODE_ENV=production postcss --config postcss.config.cjs --output ./package/dist/kahi-ui.framework.css ./src/framework/index.css",
        "build:minify": "esbuild --outfile=./package/dist/kahi-ui.framework.min.css --minify ./package/dist/kahi-ui.framework.css",
        "build:storybook": "build-storybook",
        "dev:storybook": "start-storybook --ci -p 6006",
        "lint": "npm run lint:format",
        "lint:format": "prettier --config .prettierrc --check ./",
        "format:source": "prettier --config .prettierrc --write ./src",
        "postversion": "git push && git push --tags && npm run release",
        "release": "npm run build && npm run release:publish",
        "release:publish": "npm publish ./package",
        "test": "npm run test:types && npm run test:svelte",
        "test:svelte": "svelte-check --tsconfig ./tsconfig.json",
        "test:types": "tsc --noEmit",
        "watch:framework": "postcss --config postcss.config.cjs --output ./package/dist/kahi-ui.framework.css --watch ./src/framework/index.css"
    },
    "dependencies": {
        "svelte": "^3.40.2"
    }
}
